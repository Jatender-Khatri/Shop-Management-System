    public void fillVendorTable() {
        Object columnAdd[] = {"Vendor Id", "Vendor Name", "Email", "Address", "Phone Number", "Remarks", "Created Date", "Created By", "Modified Date", "Modified By", "Status"};
        DefaultTableModel model = new DefaultTableModel(columnAdd, 0);
        List<Vendor> list = vendorDao.viewAllRecord();
        for (Vendor v : list) {
            Object rowAdd[] = {v.getVendorId(), v.getVendorName(), v.getEmail(), v.getAddress(), v.getPhoneNumber(), v.getRemarks(), v.getCreatedDate(), v.getCreatedName(), v.getModifiedDate(), v.getModifedName(), v.getStatus()};
            model.addRow(rowAdd);
            vendorTable.setModel(model);
        }
    }

