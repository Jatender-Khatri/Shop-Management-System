    private void homeButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        HomeFrame frame = new HomeFrame();
        frame.setVisible(true);
        this.dispose();
    }                                          

    private void addButtonActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if (nameText.getText().trim().isEmpty() || numberText.getText().trim().isEmpty() || emailText.getText().trim().isEmpty()
                || addressArea.getText().trim().isEmpty() || remarksText.getText().trim().isEmpty() || statusText.getText().trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Field(s) are Empty");
        } else {
            String name = nameText.getText();
            String email = emailText.getText();
            String address = addressArea.getText();
            String status = statusText.getText();
            String remarks = remarksText.getText();
            String number = numberText.getText();
            vendor.setVendorName(name);
            vendor.setEmail(email);
            vendor.setAddress(address);
            vendor.setStatus(status);
            vendor.setPhoneNumber(number);
            vendor.setRemarks(remarks);
            int n = vendorDao.addVendor(vendor);
            if (n > 0) {
                JOptionPane.showMessageDialog(this, "Added Successfully");
                fillVendorTable();
                nameText.setText("");
                emailText.setText("");
                addressArea.setText("");
                remarksText.setText("");
                numberText.setText("");
                statusText.setText("");
            }
        }
    }                                         

    private void updateButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        if (nameText.getText().trim().isEmpty() || numberText.getText().trim().isEmpty() || emailText.getText().trim().isEmpty()
                || addressArea.getText().trim().isEmpty() || remarksText.getText().trim().isEmpty() || statusText.getText().trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Field(s) are Empty");
        } else {
            Integer id = (Integer) vendorTable.getValueAt(vendorTable.getSelectedRow(), 0);
            String name = nameText.getText();
            String email = emailText.getText();
            String address = addressArea.getText();
            String status = statusText.getText();
            String remarks = remarksText.getText();
            String number = numberText.getText();
            vendor.setVendorName(name);
            vendor.setEmail(email);
            vendor.setAddress(address);
            vendor.setStatus(status);
            vendor.setPhoneNumber(number);
            vendor.setRemarks(remarks);
            vendor.setVendorId(id);
            int n = JOptionPane.showConfirmDialog(this, "Do You Want Update Your Record?");
            if (n == 0) {
                vendorDao.updateVendor(vendor);
                fillVendorTable();
                JOptionPane.showMessageDialog(this, "Updated Successfully");
                updateButton.setEnabled(false);
                deleteButton.setEnabled(false);
                addButton.setEnabled(true);
                clearButton.setEnabled(true);
                nameText.setText("");
                emailText.setText("");
                addressArea.setText("");
                remarksText.setText("");
                numberText.setText("");
                statusText.setText("");
            }
        }
    }                                            

    private void deleteButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        Integer id = (Integer) vendorTable.getValueAt(vendorTable.getSelectedRow(), 0);
        int number = JOptionPane.showConfirmDialog(this, "Do You Want Delete Your Record?");
        if (number == 0) {
            vendorDao.deleteVendor(id);
            fillVendorTable();
            JOptionPane.showMessageDialog(this, "Delete Successfully");
            nameText.setText("");
            emailText.setText("");
            addressArea.setText("");
            remarksText.setText("");
            numberText.setText("");
            statusText.setText("");
        }
    }                                            

    private void clearButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        updateButton.setEnabled(false);
        deleteButton.setEnabled(false);
        addButton.setEnabled(true);
        clearButton.setEnabled(true);
        nameText.setText("");
        emailText.setText("");
        addressArea.setText("");
        remarksText.setText("");
        numberText.setText("");
        statusText.setText("");
    }                                           

    private void vendorTableMouseClicked(java.awt.event.MouseEvent evt) {                                         
        updateButton.setEnabled(true);
        deleteButton.setEnabled(true);
        addButton.setEnabled(false);
        clearButton.setEnabled(true);
        Integer id = (Integer) vendorTable.getValueAt(vendorTable.getSelectedRow(), 0);
        Vendor v = vendorDao.viewById(id);
        nameText.setText(v.getVendorName());
        emailText.setText(v.getEmail());
        addressArea.setText(v.getAddress());
        statusText.setText(v.getStatus());
        numberText.setText(v.getPhoneNumber());
        remarksText.setText(v.getRemarks());
    }                                        

    private void searchTextKeyReleased(java.awt.event.KeyEvent evt) {                                       
        DefaultTableModel table = (DefaultTableModel) vendorTable.getModel();
        String search = searchText.getText();
        TableRowSorter<DefaultTableModel> trs = new TableRowSorter<DefaultTableModel>(table);
        vendorTable.setRowSorter(trs);
        trs.setRowFilter(RowFilter.regexFilter(search));
    }                                      

    private void addButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                           
        try {
            JasperDesign design = JRXmlLoader.load("D:\\University_work\\TuitionWork\\IReport\\ShopManagementSystem\\Vendor.jrxml");
            JasperReport report = JasperCompileManager.compileReport(design);
            JasperPrint jasperPrint = JasperFillManager.fillReport(report, null, con);
            JasperViewer.viewReport(jasperPrint);
        } catch (JRException ex) {
            ex.printStackTrace();
        }
    }                                          

