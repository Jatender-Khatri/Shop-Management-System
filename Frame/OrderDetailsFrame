    private void homeButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        HomeFrame frame = new HomeFrame();
        frame.setVisible(true);
        this.dispose();
    }                                          

    private void orderDetailsTableMouseClicked(java.awt.event.MouseEvent evt) {                                               
        Integer orderId = (Integer) orderTable.getValueAt(orderTable.getSelectedRow(), 0);
        
        if(orderId != null){
        
            currentSelectedOrder = orderDAOImpl.getOrderByID(orderId);
            fillOrderDetailsTable();
        }
    }                                              

    private void orderTableMouseClicked(java.awt.event.MouseEvent evt) {                                        
       Integer orderId = (Integer) orderTable.getValueAt(orderTable.getSelectedRow(), 0);
        
        if(orderId != null){
        
            currentSelectedOrder = orderDAOImpl.getOrderByID(orderId);
            fillOrderDetailsTable();
        }
    }                                       

