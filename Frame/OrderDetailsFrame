    Object columns[] = {"ID","Order Code", "Product", "Selling Price", "Quantity", "Total", "Created Date", "Created By", "Modified Date", "Modified By"};
    DefaultTableModel orderDetailsModel = new DefaultTableModel(columns, 0);
    public OrderDetailsFrame() {
        initComponents();
        orderDetailsTable.setModel(orderDetailsModel); 
        fillOrderTable();
    }
    public void fillOrderTable() {

        Object columns[] = {"ID", "Order Code", "Order Date", "Customer Name", "Customer Address","Grand Total", "Created Date", "Created By", "Modified Date", "Modified By"};
        DefaultTableModel model = new DefaultTableModel(columns, 0);
        List<Order> allOrder = orderDAOImpl.getAllOrder();

        for (Order o : allOrder) {

            Object rowData[] = {o.getOrderId(), o.getOrderCode(),o.getOrderDate(),o.getCustomerName(),o.getCustomerAddress(),o.getGrandTotal(),o.getCreatedDate(),o.getCustomerName(),o.getModifiedDate(),o.getModifedName()};

            model.addRow(rowData);
            orderTable.setModel(model);

        }
    }
    public void fillOrderDetailsTable() {

        orderDetailsModel = new DefaultTableModel(columns, 0);
        
        List<OrderDetails> allOrderDetails = orderDetailsDAOImpl.getAllDetailsOf(currentSelectedOrder);

        for (OrderDetails odt : allOrderDetails) {
            Product p = productDao.viewById(odt.getProduct().getProductId());
            
            Object rowData[] = {odt.getOrderDetailID(),odt.getOrder().getOrderCode(), p.getProductName(),odt.getSellingPrice(),odt.getQuantity(),odt.getTotal(),odt.getCreatedDate(),odt.getCreatedName(),odt.getModifiedDate(),odt.getModifedName()};

            orderDetailsModel.addRow(rowData);
            orderDetailsTable.setModel(orderDetailsModel);

        }
    }
    OrderDao orderDAOImpl = new OrderDaoImple();
    OrderDetailsDao orderDetailsDAOImpl = new OrderDetailsDaoImpls();
    ProductDao productDao = new ProductDaoImpl();
