    private void homeButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        HomeFrame frame = new HomeFrame();
        frame.setVisible(true);
        this.dispose();
    }                                          

    private void searchTextKeyReleased(java.awt.event.KeyEvent evt) {                                       
        DefaultTableModel table = (DefaultTableModel) accountTable.getModel();
        String search = searchText.getText();
        TableRowSorter<DefaultTableModel> trs = new TableRowSorter<DefaultTableModel>(table);
        accountTable.setRowSorter(trs);
        trs.setRowFilter(RowFilter.regexFilter(search));
    }                                      

    private void addButtonActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if (accountText.getText().trim().isEmpty() || bankText.getText().trim().isEmpty() || numberText.getText().trim().isEmpty()
                || balanceText.getText().trim().isEmpty() || remarksText.getText().trim().isEmpty() || statusText.getText().trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Field(s) are Empty");
        } else {
            String accountTitle = accountText.getText();
            String bankName = bankText.getText();
            String accountNumber = numberText.getText();
            String balance = balanceText.getText();
            String remarks = remarksText.getText();
            String status = statusText.getText();
            account.setAccountNumber(accountNumber);
            account.setAccountTitle(accountTitle);
            account.setBankName(bankName);
            account.setCurrentBalance(balance);
            account.setRemarks(remarks);
            account.setStatus(status);
            //account.setCreatedName(LoginFrame.uName());
            int number = accountDao.addAccount(account);
            if (number > 0) {
                JOptionPane.showMessageDialog(this, "Added Successfully");
                fillAccountTable();
                accountText.setText("");
                bankText.setText("");
                numberText.setText("");
                balanceText.setText("");
                remarksText.setText("");
                statusText.setText("");
            }
        }
    }                                         

    private void updateButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        if (accountText.getText().trim().isEmpty() || bankText.getText().trim().isEmpty() || numberText.getText().trim().isEmpty()
                || balanceText.getText().trim().isEmpty() || remarksText.getText().trim().isEmpty() || statusText.getText().trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Field(s) are Empty");
        } else {
            Integer id = (Integer) accountTable.getValueAt(accountTable.getSelectedRow(), 0);
            String accountTitle = accountText.getText();
            String bankName = bankText.getText();
            String accountNumber = numberText.getText();
            String balance = balanceText.getText();
            String remarks = remarksText.getText();
            String status = statusText.getText();
            account.setAccountNumber(accountNumber);
            account.setAccountTitle(accountTitle);
            account.setBankName(bankName);
            account.setCurrentBalance(balance);
            account.setRemarks(remarks);
            account.setStatus(status);
            account.setAccountId(id);
            Integer numbber = JOptionPane.showConfirmDialog(this, "Do You Want Update Your Record?");
            if (numbber == 0) {
                accountDao.updateAccount(account);
                fillAccountTable();
                JOptionPane.showMessageDialog(this, "Update Successfully");
                accountText.setText("");
                bankText.setText("");
                numberText.setText("");
                balanceText.setText("");
                remarksText.setText("");
                statusText.setText("");
            }
        }
    }                                            

    private void deleteButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        Integer id = (Integer) accountTable.getValueAt(accountTable.getSelectedRow(), 0);
        int number = JOptionPane.showConfirmDialog(this, "Do You Want Delete Your Record?");
        if (number == 0) {
            accountDao.deleteAccount(id);
            fillAccountTable();
            JOptionPane.showMessageDialog(this, "Delete Successfully");
            accountText.setText("");
            bankText.setText("");
            numberText.setText("");
            balanceText.setText("");
            remarksText.setText("");
            statusText.setText("");
        }
    }                                            

    private void clearButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        updateButton.setEnabled(false);
        deleteButton.setEnabled(false);
        addButton.setEnabled(true);
        accountText.setText("");
        bankText.setText("");
        numberText.setText("");
        balanceText.setText("");
        remarksText.setText("");
        statusText.setText("");
    }                                           

    private void accountTableMouseClicked(java.awt.event.MouseEvent evt) {                                          
        updateButton.setEnabled(true);
        deleteButton.setEnabled(true);
        clearButton.setEnabled(true);
        addButton.setEnabled(false);
        Integer accountId = (Integer) accountTable.getValueAt(accountTable.getSelectedRow(), 0);
        Account a = accountDao.viewById(accountId);
        accountText.setText(a.getAccountTitle());
        bankText.setText(a.getBankName());
        numberText.setText(a.getAccountNumber());
        balanceText.setText(a.getCurrentBalance());
        remarksText.setText(a.getRemarks());
        statusText.setText(a.getStatus());

    }                                         

    private void reportButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        try {
            JasperDesign design = JRXmlLoader.load("D:\\University_work\\TuitionWork\\IReport\\ShopManagementSystem\\accountReport.jrxml");
            JasperReport report = JasperCompileManager.compileReport(design);
            JasperPrint jasperPrint = JasperFillManager.fillReport(report, null, con);
            JasperViewer.viewReport(jasperPrint);
        } catch (JRException ex) {
            ex.printStackTrace();
        }
    }                                            

