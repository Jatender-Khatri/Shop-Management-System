    public void fillAccountTable() {
        Object columnAdd[] = {"Account Id", "Account Title", "Bank Name", "Account Number", "Current Balancce", "Remarks", "Created Date", "Created By", "Modified Date", "Modified By", "Status"};
        DefaultTableModel model = new DefaultTableModel(columnAdd, 0);
        List<Account> list = accountDao.viewAllRecord();
        for (Account v : list) {
            Object rowAdd[] = {v.getAccountId(), v.getAccountTitle(), v.getBankName(), v.getAccountNumber(), v.getCurrentBalance(), v.getRemarks(), v.getCreatedDate(), v.getCreatedName(), v.getModifiedDate(), v.getModifedName(), v.getStatus()};
            model.addRow(rowAdd);
            accountTable.setModel(model);
        }
    }

