    public void fillPurchaseTable() {
        Object columnAdd[] = {"Sell Id", "Account", "Selling Date", "Order", "Amount", "Remarks", "Created Date", "Created By", "Modified Date", "Modified By", "Status"};
        DefaultTableModel model = new DefaultTableModel(columnAdd, 0);
        List<SellTranscationHistory> list = dao.viewAllRecord();
        for (SellTranscationHistory v : list) {
            a = accountDao.viewById(v.getAccount().getAccountId());
            o = orderDao.getOrderByID(v.getOrder().getOrderId());
            Object rowAdd[] = {v.getSellTranscationHistoryId(), a.getAccountTitle(), v.getSellingDate(), o.getOrderCode(), v.getAmount(), v.getRemarks(), v.getCreatedDate(), v.getCreatedName(), v.getModifiedDate(), v.getModifedName(), v.getStatus()};
            model.addRow(rowAdd);
            historyTable.setModel(model);
        }
    }
    
    public void fillAccountCombo() {
        List<Account> list = accountDao.viewAllRecord();
        accountCombo.addItem("--- Select Account ---");
        for (Account b : list) {
            accountCombo.addItem(b.getAccountTitle());
        }
    }
    
    public void fillOrderCombo() {
        List<Order> list = orderDao.getAllOrder();
        orderCombo.addItem("--- Select Order ---");
        for (Order b : list) {
            orderCombo.addItem(b.getOrderCode());
        }
    }

