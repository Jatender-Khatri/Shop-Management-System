    private void homeButtonActionPerformed(java.awt.event.ActionEvent evt) {                                           
        HomeFrame frame = new HomeFrame();
        frame.setVisible(true);
        this.dispose();
    }                                          

    private void searchTextKeyReleased(java.awt.event.KeyEvent evt) {                                       
        DefaultTableModel table = (DefaultTableModel) historyTable.getModel();
        String search = searchText.getText();
        TableRowSorter<DefaultTableModel> trs = new TableRowSorter<DefaultTableModel>(table);
        historyTable.setRowSorter(trs);
        trs.setRowFilter(RowFilter.regexFilter(search));
    }                                      

    private void addButtonActionPerformed(java.awt.event.ActionEvent evt) {                                          
        if (amountText.getText().trim().isEmpty() || remarksText.getText().trim().isEmpty() || statusText.getText().trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Field(s) are Empty");
        } else {
            String accountName = accountCombo.getSelectedItem().toString();
            Integer accountId = accountDao.viewByName(accountName);
            String orderName = orderCombo.getSelectedItem().toString();
            Integer orderOd = orderDao.getOrderIDByCode(orderName);
            String amount = amountText.getText();
            String remarks = remarksText.getText();
            String status = statusText.getText();
            o.setOrderId(orderOd);
            sth.setOrder(o);
            a.setAccountId(accountId);
            sth.setAccount(a);
            sth.setAmount(amount);
            sth.setStatus(status);
            sth.setRemarks(remarks);
            sth.setSellingDate(dateText.getDate());
            Integer number = dao.addSellTranscationHistory(sth);
            if (number > 0) {
                JOptionPane.showMessageDialog(this, "Added Successfully");
                fillPurchaseTable();
                dateText.setDate(null);
                accountCombo.setSelectedIndex(0);
                orderCombo.setSelectedIndex(0);
                amountText.setText("");
                remarksText.setText("");
                statusText.setText("");
            }
        }
    }                                         

    private void updateButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        if (amountText.getText().trim().isEmpty() || remarksText.getText().trim().isEmpty() || statusText.getText().trim().isEmpty()) {
            JOptionPane.showMessageDialog(this, "Field(s) are Empty");
        } else {
            Integer id = (Integer) historyTable.getValueAt(historyTable.getSelectedRow(), 0);
            String accountName = accountCombo.getSelectedItem().toString();
            Integer accountId = accountDao.viewByName(accountName);
            String orderName = orderCombo.getSelectedItem().toString();
            Integer orderOd = orderDao.getOrderIDByCode(orderName);
            String amount = amountText.getText();
            String remarks = remarksText.getText();
            String status = statusText.getText();
            o.setOrderId(orderOd);
            sth.setOrder(o);
            a.setAccountId(accountId);
            sth.setAccount(a);
            sth.setAmount(amount);
            sth.setStatus(status);
            sth.setRemarks(remarks);
            sth.setSellingDate(dateText.getDate());
            sth.setSellTranscationHistoryId(id);
            Integer number = JOptionPane.showConfirmDialog(this, "Do You Want Update Your Record?");
            if (number == 0) {
                dao.updateSellTranscationHistory(sth);
                fillPurchaseTable();
                JOptionPane.showMessageDialog(this, "Updated Successfully");
                updateButton.setEnabled(false);
                deleteButton.setEnabled(false);
                addButton.setEnabled(true);
                clearButton.setEnabled(true);
                dateText.setDate(null);
                accountCombo.setSelectedIndex(0);
                orderCombo.setSelectedIndex(0);
                amountText.setText("");
                remarksText.setText("");
                statusText.setText("");
            }
        }
    }                                            

    private void deleteButtonActionPerformed(java.awt.event.ActionEvent evt) {                                             
        Integer id = (Integer) historyTable.getValueAt(historyTable.getSelectedRow(), 0);
        Integer number = JOptionPane.showConfirmDialog(this, "Do You Want Delete Your Record?");
        if (number == 0) {
            dao.deleteSellTranscationHistory(id);
            fillPurchaseTable();
            JOptionPane.showMessageDialog(this, "Deleted Successfully");
            dateText.setDate(null);
            accountCombo.setSelectedIndex(0);
            orderCombo.setSelectedIndex(0);
            amountText.setText("");
            remarksText.setText("");
            statusText.setText("");
        }
    }                                            

    private void clearButtonActionPerformed(java.awt.event.ActionEvent evt) {                                            
        updateButton.setEnabled(false);
        deleteButton.setEnabled(false);
        addButton.setEnabled(true);
        clearButton.setEnabled(true);
        dateText.setDate(null);
        accountCombo.setSelectedIndex(0);
        orderCombo.setSelectedIndex(0);
        amountText.setText("");
        remarksText.setText("");
        statusText.setText("");
    }                                           

    private void historyTableMouseClicked(java.awt.event.MouseEvent evt) {                                          
        updateButton.setEnabled(true);
        deleteButton.setEnabled(true);
        addButton.setEnabled(false);
        Integer id = (Integer) historyTable.getValueAt(historyTable.getSelectedRow(), 0);
        sth = dao.viewById(id);
        a = accountDao.viewById(sth.getAccount().getAccountId());
        accountCombo.setSelectedItem(a.getAccountTitle());
        o = orderDao.getOrderByID(sth.getOrder().getOrderId());
        orderCombo.setSelectedItem(o.getOrderCode());
        amountText.setText(sth.getAmount());
        remarksText.setText(sth.getRemarks());
        statusText.setText(sth.getStatus());
        dateText.setDate(sth.getSellingDate());
    }                                         

