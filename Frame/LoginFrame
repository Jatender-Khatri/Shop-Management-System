    private void passwordComboActionPerformed(java.awt.event.ActionEvent evt) {                                              
        if (passwordCombo.isSelected()) {
            passwordText.setEchoChar((char) 0);
        } else {
            passwordText.setEchoChar('*');
        }        // TODO add your handling code here:
    }                                             

    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        try {
            Integer flag = 1;
            Statement s = con.createStatement();
            ResultSet set = s.executeQuery("select * from users");

            while (set.next()) {
                if (set.getString(3).equals(usernameText.getText()) && set.getString(4).equals(passwordText.getText())) {
                    flag = 0;
                    break;
                }
            }
            if (flag == 0) {
                JOptionPane.showMessageDialog(this, "Login Successfully");
//                id = user.getRoll().getId();
//                name = roleDao.viewById(id).getName();
                HomeFrame frmae = new HomeFrame();
                frmae.setVisible(true);
                this.dispose();
            } else {
                JOptionPane.showMessageDialog(this, "Incorrect Username or Password");
                usernameText.setText("");
                passwordText.setText("");
            }
        } catch (HeadlessException | SQLException e) {
            e.printStackTrace();
        }        // TODO add your handling code here:
    }                                        

    private void usernameTextFocusGained(java.awt.event.FocusEvent evt) {                                         
        if (usernameText.getText().equals("Enter Username")) {
            usernameText.setText("");
            usernameText.setForeground(new Color(153, 153, 153));
        }        // TODO add your handling code here:
    }                                        

    private void usernameTextFocusLost(java.awt.event.FocusEvent evt) {                                       
        if (usernameText.getText().equals("")) {
            usernameText.setText("Enter Username");
            usernameText.setForeground(new Color(153, 153, 153));
        }        // TODO add your handling code here:
    }                                      

    private void jLabel3MouseClicked(java.awt.event.MouseEvent evt) {                                     
        ForgotPasswordFrame frame = new ForgotPasswordFrame();
        frame.setVisible(true);
    }                                    

